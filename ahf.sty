\def\thickhrulefill{\leavevmode \leaders \hrule height 1pt\hfill \kern \z@}
\renewcommand{\maketitle}{
\begin{titlepage}
    \let\footnotesize\small
    \let\footnoterule\relax
    \parindent \z@
    \reset@font
    \null\vfil
    \hrule height 3pt
    \vskip 20\p@
    \begin{flushright}
      \huge
      \strut \textsf{\@title} \par
      \vskip 20\p@
    \end{flushright}
%    \begin{flushright}
%      \large
%          \begin{tabular}[t]{c}%
%            \textsf{\@author}
%          \end{tabular}\par
%    \end{flushright}
    \vskip 1\p@
    \hrule height 3pt
    \begin{flushright}
        \strut \small \textsf{\@author}\par
        \strut \small \textsf{\@date} \par
    \end{flushright}
    \vskip 60\p@
    \vfil\null
  \end{titlepage}
  \setcounter{footnote}{0}
}
